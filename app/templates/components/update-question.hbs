{{#if updateQuestionForm}}
  <h4>Update "{{question.query}}"</h4>
  <div class="row">
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input class="form-control" value=question.author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="query">Question</label>
        {{input class="form-control" value=question.query id="query" placeholder=question.query}}
      </div>
      <div class="form-group">
        <label for="notes">Further Details</label>
        {{textarea class="form-control" rows=5 value=question.notes id="notes" placeholder=question.notes}}
      </div>
      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
